<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="35dp"
    android:orientation="vertical"
    android:background="@color/appBg">

    <LinearLayout
        android:id="@+id/lin1reg"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/rel1reg"
            android:layout_width="fill_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/barduino_red"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"/>


            </RelativeLayout>
        </LinearLayout>
    <LinearLayout
        android:id="@+id/lin2reg"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/rel2reg"
            android:layout_width="fill_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="REGISTER"
                android:textColor="@color/logoColor"
                android:gravity="center_horizontal|center_vertical"
                android:textStyle="bold"
                android:textSize="15sp"
                />


        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lin3reg"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/rel3reg"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_login">
            <EditText
                android:id="@+id/etUsername_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentBottom="true"
                android:singleLine="true"
                android:hint="Username"
                android:textSize="20dp"
                android:paddingLeft="15dp"
                android:background="#00000000"/>

        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lin4reg"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/rel4reg"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_login">

            <EditText
                android:id="@+id/etPassword_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentBottom="true"
                android:singleLine="true"
                android:hint="Password"
                android:password="true"
                android:inputType="textPassword"
                android:textSize="20dp"
                android:paddingLeft="15dp"
                android:background="#00000000" />


        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lin5reg"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/rel5reg"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_login">

            <EditText
                android:id="@+id/etPassword_register_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentBottom="true"
                android:hint="Retype Password"
                android:singleLine="true"
                android:password="true"
                android:inputType="textPassword"
                android:textSize="20dp"
                android:paddingLeft="15dp"
                android:background="#00000000"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lin6reg"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_login"
            android:layout_marginTop="10dp">
            <Button
                android:id="@+id/btnSubmit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Submit"
                android:background="#0000"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/btnCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Cancel"
                android:layout_weight="1"
                android:background="#0000"/>
            </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/lin7reg"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/rel7reg"
            android:layout_width="fill_parent"
            android:layout_height="match_parent">

        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lin8reg"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/rel8reg"
            android:layout_width="fill_parent"
            android:layout_height="match_parent">

        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lin9reg"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/rel9reg"
            android:layout_width="fill_parent"
            android:layout_height="match_parent">

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>