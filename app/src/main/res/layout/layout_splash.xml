<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appBg"
    android:paddingRight="40dp"
    android:paddingLeft="40dp">

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/invisibleMidLine"
        android:layout_centerInParent="true"/>

    <ImageView
        android:id="@+id/barduinoLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/barduino_red"
        android:layout_above="@+id/invisibleMidLine"
        android:layout_centerInParent="true"
        android:paddingTop="100dp"/>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:max="100"
        android:indeterminate="false"
        android:layout_marginBottom="100dp"
        android:progress="0"
        android:layout_below="@+id/invisibleMidLine"
        android:layout_alignRight="@+id/barduinoLogo"
        android:layout_alignLeft="@+id/barduinoLogo"
        android:paddingRight="0dp"
        android:paddingLeft="0dp"
        android:paddingBottom="100dp"/>



</RelativeLayout>
